<activity android:name="com.punhubcentral.punhubcentral.PunHubCentralActivity" android:label="@string/title_punhubcentral" >
    <intent-filter android:label="@string/filter_view_http_punhubcentral">
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <!-- Accepts URIs that begin with "https://www.punhubcentral.com” -->
        <data android:scheme="https" android:host="www.punhubcentral.com" android:pathPrefix="/" />
        <!-- note that the leading "/" is required for pathPrefix-->
    </intent-filter>
    <intent-filter android:label="@string/filter_view_example_punhubcentral">
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <!-- Accepts URIs that begin with "punhubcentral://” -->
        <data android:scheme="punhubcentral" android:host="" android:pathPrefix="/"  />
    </intent-filter>
</activity>